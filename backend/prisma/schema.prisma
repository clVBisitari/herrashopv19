generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("ACCELERATE_REMOTE")
}
model Producto {
  id            Int     @id @default(autoincrement())
  nombre        String
  descripcion   String
  clasificacion String
  precio        Float
  stock         Int
  imagen        String
}
model Usuario {
  id        Int     @id @default(autoincrement())
  nombre    String
  email     String  @unique
  password  String
  telefono  Int
  direccion String
  ciudad    String
  pais      String
  codigo_postal String
  fecha_registro DateTime @default(now())
  rol       String   @default("user") // 'admin' | 'user'
}